@model WebApplMVC_Crud.Models.ViewModels.ProductoVM
@{
    ViewBag.Title = "Editar Producto";
}

<h2 style="margin-top:70px">@ViewBag.Title</h2>

@using (Html.BeginForm("Editar", "Producto", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.Id)

            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "red-danger" })
            <br />
            @Html.LabelFor(d => d.Descripcion)
            @Html.TextBoxFor(d => d.Descripcion, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.Descripcion, null, new { @class = "red-danger" })
            <br />
            @Html.LabelFor(d => d.PrecioCompra)
            @Html.TextBoxFor(d => d.PrecioCompra, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.PrecioCompra, null, new { @class = "red-danger" })
            <br />
            @Html.LabelFor(d => d.PrecioVenta)
            @Html.TextBoxFor(d => d.PrecioVenta, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.PrecioVenta, null, new { @class = "red-danger" })
            <br />
            @Html.LabelFor(d => d.InventarioMinimo)
            @Html.TextBoxFor(d => d.InventarioMinimo, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(d => d.InventarioMinimo, null, new { @class = "red-danger" })
            <div style="text-align:right; margin-top:5px;">
                <input class="btn btn-success" type="submit" value="Editar Producto" />
            </div>
            <div style="text-align:left; margin-top:5px;">
                <a href="~/Producto/" class="btn btn-danger">Atras</a>
            </div>
        </div>

    </div>
}